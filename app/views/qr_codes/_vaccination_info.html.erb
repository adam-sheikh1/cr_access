<div class="inner-content" data-controller='qr-code'>
  <div class="">
    <%= image_tag cr_access_data.profile_picture, class: '' if cr_access_data.profile_picture.attached? %>
    <h2 class="mb-0 mt-2"><%= cr_access_data.full_name %></h2>
  </div>
  <% if cr_access_data.fully_vaccinated? %>
    <div class="mb-3">
      <small class="text-muted mb-2">CrAccess #<%= cr_access_data.fv_code.code %></small>
    </div>
    <%= qr_code_image cr_access_data.qr_code, klass: 'img-thumbnail' %>
  <% else %>
    <small class="text-muted">CrAccess #XXXXXXXXXX</small>
    <%= image_tag 'non-vaccinated.png', class: 'non-vaccinated-img' %>
  <% end %>
  <div class="block-inline">
    <h3 class='mt-2 mb-0'><%= cr_access_data.vaccination_status.to_s.titleize %></h3>
    <% if cr_access_data.fully_vaccinated? %>
      <small class="text-muted d-block">Against COVID-19</small>
      <small class="text-muted">Until 01/20/22</small>
    <% elsif cr_access_data.not_vaccinated? %>
      <small class="text-muted">Against COVID-19</small>
    <% else %>
      <small class="text-muted d-block">Against COVID-19</small>
      <small class="text-muted">Second Dose Required</small>
    <% end %>
  </div>
</div>
