<div class='container mt-4 mb-4'>
  <div class="white-card">
    <div class='row mb-4 mt-4'>
      <div class='col-xs-12 col-sm-6 col-md-6 col-lg-6'>
        <h1>Info</h1>
      </div>
      <div class='col-xs-12 col-sm-6 col-md-6 col-lg-6'>
        <div class="d-flex justify-content-end align-items-center h-100">
          <%= link_to 'Back', request.referrer, class: 'btn btn-primary-small mr-2' %>
        </div>
      </div>
    </div>

    <hr>

    <div class='row mb-5'>
      <div class='col-12'>
        <%= simple_form_for current_user do |f| %>
          <h5 class='mt-2'><%= @cr_access_data.full_name %></h5>
          <%= f.fields_for :cr_access_data, @cr_access_data do |c| %>
            <%= render 'users/cr_access_data', f: c %>
          <% end %>
        <% end %>
      </div>
    </div>

    <% if @cr_access_data.fully_vaccinated? %>
      <div class='row mb-4 mt-4'>
        <div class='col-md-12 mb-3'>
          <h3>Qr Code</h3>
        </div>
        <div class='col-md-12' data-controller='qr-code'>
          <%= qr_code_image @qr_code, klass: 'img-thumbnail' %>
        </div>
      </div>
    <% end %>

    <% if @cr_access_data.fv_code.present? %>
      <div class='row mb-4 mt-4'>
        <div class='col-md-12 mb-3'>
          <h3>Cr Access#</h3>
        </div>
        <div class='col-md-12' data-controller='qr-code'>
          <%= @cr_access_data.fv_code.code %>
        </div>
      </div>
    <% end %>

    <% if @groups.present? %>
      <h5>You are registered with these vaccination groups:</h5>
      <%= render 'cr_groups/group_list', groups: @groups %>
    <% end %>
  </div>
</div>
