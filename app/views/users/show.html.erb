<div class='container mt-5 mb-5'>
  <div class="white-card">
    <div class='row'>
      <div class='col-xs-12 col-sm-12 col-md-6 col-lg-6'>
        <h1>Welcome, <%= current_user.full_name %>!</h1>
      </div>
      <div class='col-xs-12 col-sm-12 col-md-6 col-lg-6'>
        <div class="d-flex justify-content-end align-items-center h-100">
          <%= link_to 'FV Code', fv_code_user_path, class: 'btn btn-primary-small mr-2' if current_user.vaccinated? %>
          <%= link_to 'Vaccination Records', vaccinations_user_path, class: 'btn btn-primary-small mr-2' %>
          <%= link_to "Edit Profile", edit_user_path, class: 'btn btn-primary-small' %>
        </div>
      </div>
      <div class="col-12">
        <% if current_user.profile_picture&.attached? %>
          <%= image_tag current_user.profile_picture, class: 'profile-image img-thumbnail' %>
        <% else %>
          <%= image_tag 'manage-clinic.png', class: 'profile-image img-thumbnail' %>
        <% end %>
      </div>
    </div>

    <div class="mb-5 mt-5">
      <hr>
    </div>

    <% if @cr_access.present? %>
      <div class="row">
        <div class='col-xs-12 col-sm-4 col-md-4 col-lg-4'>
          <div class="inner-content" data-controller='qr-code'>
            <%= image_tag @cr_access.profile_picture, class: 'profile-image img-thumbnail mb-2' if @cr_access.profile_picture.attached? %>
            <h4><%= @cr_access.full_name %></h4>
            <% if @cr_access.fully_vaccinated? %>
              <h5>CrAccess#<%= @cr_access.fv_code.code %></h5>
              <%= qr_code_image @qr_code, klass: 'img-thumbnail' %>
            <% else %>
              <h6>CrAccess</h6>
              <%= image_tag 'non-vaccinated.png', class: 'non-vaccinated-img img-thumbnail' %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
