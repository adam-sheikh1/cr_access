<div class='content-wrapper'>
  <div class="profile-block">
    <div class="white-card">
      <div class="white-card-body">
        <div class="text-inline">
          <% if current_user.profile_picture&.attached? %>
            <div class="profile-image">
              <%= image_tag current_user.profile_picture, class: '' %>
            </div>
          <% else %>
            <div class="profile-image">
              <%= image_tag 'manage-clinic.png', class: '' %>
            </div>
          <% end %>
          <div>
            <h3 class="mb-0">Welcome beyonce</h3>
            <small class="text-muted">CRAccess#</small>
          </div>
        </div>
      </div>

      <hr>

      <% if @cr_access.present? %>
        <div class="white-card-body">
          <div class="text-inline">
            <div data-controller='qr-code'>
              <% if @cr_access.fully_vaccinated? %>
                <%= qr_code_image @qr_code, klass: 'img-thumbnail' %>
              <% else %>
                <%= image_tag 'non-vaccinated.png', class: 'non-vaccinated-img img-thumbnail' %>
              <% end %>
            </div>
            <div class="inner-content">
              <div class="d-flex">
                <h3><%= @cr_access.full_name %></h3>
                <div class="ml-2">
                  <%= image_tag @cr_access.profile_picture, class: 'profile-image' if @cr_access.profile_picture.attached? %>
                </div>
              </div>
              <div class="mt-3">
                <%= link_to 'Go to vaccination record', vaccinations_user_path, class: 'btn primary-btn' %>
              </div>
            </div>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
