<div class='container mt-5 mb-5'>
  <div class="white-card">
    <div class='row'>
      <div class='col-xs-12 col-sm-12 col-md-6 col-lg-6'>
        <h1>Welcome, <%= current_user.full_name %>!</h1>
      </div>
      <div class='col-xs-12 col-sm-12 col-md-6 col-lg-6'>
        <div class="d-flex justify-content-end align-items-center h-100">
          <%= link_to 'Profile', user_path(current_user), class: 'btn btn-primary-small' %>
        </div>
      </div>
      <div class="col-12">
        <% if current_user&.profile_picture&.attached? %>
          <%= image_tag current_user.profile_picture, class: 'profile-image img-thumbnail' %>
        <% else %>
          <%= image_tag 'manage-clinic.png', class: 'profile-image img-thumbnail' %>
        <% end %>
      </div>
    </div>

    <% if current_user.cr_access_data.present? %>
      <div class="mb-5 mt-5">
        <hr>
      </div>

      <div class="row">
        <div class='col-xs-12 col-sm-4 col-md-4 col-lg-4'>
          <div class="inner-content">
            <h5 class='mb-2'>FV Code(s):</h5>
            <%= render partial: 'fv_code', collection: current_user.cr_access_data, as: :cr_access %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
