<div class='container mt-5 mb-5'>
  <div class="white-card">
    <div class='row'>
      <div class='col-xs-12 col-sm-12 col-md-6 col-lg-6'>
        <h1>Welcome, <%= current_user.full_name %>!</h1>
      </div>
      <div class='col-xs-12 col-sm-12 col-md-6 col-lg-6'>
        <div class="d-flex justify-content-end align-items-center h-100">
          <%= link_to 'Send Info', share_info_user_path, class: 'btn btn-primary-small mr-2' %>
          <%= link_to 'Profile', user_path, class: 'btn btn-primary-small' %>
        </div>
      </div>
      <div class="col-12">
        <% if current_user.profile_picture&.attached? %>
          <%= image_tag current_user.profile_picture, class: 'profile-image img-thumbnail' %>
        <% else %>
          <%= image_tag 'manage-clinic.png', class: 'profile-image img-thumbnail' %>
        <% end %>
      </div>
    </div>

    <div class="mb-5 mt-5">
      <hr>
    </div>

    <h5>You are authorized to access vaccination records of:</h5>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @cr_access_info.each do |cr_access| %>
            <tr>
              <td><%= cr_access.full_name %></td>
              <td><%= cr_access.vaccination_status.titleize %></td>
              <td>
                <%= link_to 'View', cr_access_path(cr_access), class: 'btn btn-primary-small d-inline-flex' %>
                <%= link_to 'Remove', unlink_cr_access_path(cr_access), class: 'btn btn-primary-small d-inline-flex', method: :delete, data: { confirm: 'Are you sure?' } if cr_access.linked_with?(current_user) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="mb-5 mt-5">
      <hr>
    </div>

    <h5>You are registered with these vaccination groups:
      <%= link_to 'Add', new_cr_group_path, class: 'btn btn-primary-small d-inline-flex float-right mr-2 mb-3' %>
    </h5>

    <%= render 'cr_groups/group_list', groups: @groups %>
  </div>
</div>
