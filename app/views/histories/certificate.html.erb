<div>
  <%= image_tag image_url('craccess_plus_logo.png'), width: 100, height: 100 %>
  <h2>
    Patient Vaccination Record
  </h2>
</div>

<div>
  <strong>Date: </strong>
  <span><%= formatted_date(DateTime.now) %></span>
</div>

<div>
  <strong>CRAccess Number:</strong>
  <span><%= @cr_access.fv_code&.code %></span>
</div>

<div>
  <strong>Name:</strong>
  <span><%= @cr_access.full_name %></span>
</div>

<div>
  <strong>Date of Birth:</strong>
  <span><%= formatted_date(@cr_access.date_of_birth) %></span>
</div>

<div>
  <strong>Gender:</strong>
  <span><%= formatted_gender @cr_access.gender %></span>
</div>

<div>
  <strong>Guardian:</strong>
  <span></span>
</div>

<div>
  <strong>Phone:</strong>
  <span><%= @cr_access.phone_number %></span>
</div>

<div>
  <strong>Address:</strong>
  <span><%= @cr_access.address %></span>
</div>

<div>
  <strong>City:</strong>
  <span><%= @cr_access.city %></span>
</div>

<div>
  <strong>State:</strong>
  <span><%= @cr_access.state %></span>
</div>


<div>
  <strong>Zip:</strong>
  <span><%= @cr_access.zip_code %></span>
</div>

<table>
  <thead>
    <tr>
      <th>
        Vaccine Family
      </th>
      <th>
        Dose 1
      </th>
      <th>
        Dose 2
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>COVID-19 Vaccine</td>
      <td>
        <span>Vaccine Brand: <%= @first_dose.vaccine_name %></span><br>
        <span>Date: <%= formatted_date(@first_dose.vaccination_date) %></span><br>
        <span>Lot Number: <%= @first_dose.lot_number.upcase %></span><br>
        <span>Provider: <%= @first_dose.clinic_name %></span><br>
      </td>
      <td>
        <% if @cr_access.fully_vaccinated? %>
          <span>Vaccine Brand: <%= @first_dose.vaccine_name %></span><br>
          <span>Date: <%= formatted_date(@first_dose.vaccination_date) %></span><br>
          <span>Lot Number: <%= @first_dose.lot_number.upcase %></span><br>
          <span>Provider: <%= @first_dose.clinic_name %></span><br>
        <% else %>
          <span>Due: <%= formatted_date(@cr_access.second_dose_time) %></span>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<div>
  <%= image_tag image_url('craccess_plus_logo.png'), width: 100, height: 100 %>
  <p>
    This is a valid [state] vaccination record. This vaccination record was generated by
    CRAccess+ and doses does not require a signature to authenticate the record
  </p>
</div>
