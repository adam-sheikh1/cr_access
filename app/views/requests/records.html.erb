<div class='container'>
  <div class="white-card">
    <div class="white-card-body">
      <div class="text-inline">
        <div>
          <h3 class="">Welcome</h3>
          <div class="text-muted">You are viewing vaccination records of <%= @request.user.full_name %></div>
        </div>
      </div>
      <div class="vaccination-records">
        <div class='mt-4 mb-4'>
          <div class="table-block">

            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th></th>
                    <th>Date</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Valid Until</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% @vaccinations.each do |vaccine| %>
                    <tr>
                      <td>
                      </td>
                      <td><%= formatted_date(vaccine.vaccination_date) || '-' %></td>
                      <td><%= vaccine.vaccine_name %></td>
                      <td></td>
                      <td><%= formatted_date(vaccine.vaccine_expiration_date) || '-' %></td>
                      <td></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
