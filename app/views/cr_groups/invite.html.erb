<div class='content-wrapper'>
  <div class='mb-4 mt-4'>
    <h2>Add to Group</h2>
  </div>
  <div class="white-card" data-controller='invitation'>
    <div class='white-card-body'>

      <%= form_with url: send_invite_cr_group_path(@group), scope: 'invite', local: true do |f| %>
        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div class='form-group'>
              <%= f.label :type, 'Invite Using' %>
              <%= f.select :type, sharing_type_options, { include_blank: false }, class: 'form-control', data: { action: 'invitation#type_change' } %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <div class='form-group'>
              <%= f.label :data, 'Enter Phone', data: { target: 'invitation.label' } %>
              <%= f.text_field :data, class: 'form-control', required: true %>
            </div>
          </div>
        </div>

        <div class="form-group text-right mt-2">
          <%= f.submit "Invite", class: "btn primary-btn mr-3" %>
          <%= link_to "Back", @group, class: "btn primary-btn" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
