<div class='mb-4 mt-4'>
  <h2>Add to Group</h2>
</div>
<div class="white-card">
  <div class='white-card-body'>

    <%= form_with url: send_invite_cr_group_path(@group), scope: 'invite', local: true do |f| %>
      <div class="row">
        <div class="col-6">
          <div class='form-group'>
            <%= f.label :first_name, 'First Name' %>
            <%= f.text_field :first_name, class: 'form-control', required: true %>
          </div>
        </div>

        <div class="col-6">
          <div class='form-group'>
            <%= f.label :last_name, 'Last Name' %>
            <%= f.text_field :last_name, class: 'form-control', required: true %>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <div class='form-group'>
            <%= f.label :email, 'Email' %>
            <%= f.text_field :email, class: 'form-control', required: true %>
          </div>
        </div>
      </div>

      <div class="form-group text-right mt-2">
        <%= f.submit "Invite", class: "btn primary-btn mr-3" %>
        <%= link_to "Back", @group, class: "btn primary-btn" %>
      </div>
    <% end %>

  </div>
</div>
