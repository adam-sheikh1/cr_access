<%= simple_form_for group do |f| %>
  <div class="row">
    <div class="col-6">
      <%= f.input :name %>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <%= f.input :group_type, as: :select, include_blank: '-- Select --', collection: group_type_options %>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <%= f.submit "Submit", class: "btn btn-primary ml-3" %>
      <%= link_to 'Back', vaccinations_user_path, class: 'btn btn-primary ml-3' %>
    </div>
  </div>
<% end %>
